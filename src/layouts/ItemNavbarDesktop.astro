---
interface Props {
	link: string
	text: string
}

const { link = '/', text = 'Inicio' } = Astro.props
---

<a href={link}>
	<span class="relative">
		<span class="text-lg font-bold uppercase">{text}</span>
	</span>
</a>

<style>
	a:hover > span::before {
		visibility: visible;
		transform: scaleX(1);
		height: 3px;
	}

	a > span::before {
		position: absolute;
		visibility: hidden;
		left: 0;
		bottom: -5px;
		width: 100%;
		height: 2px;
		background-color: #3056a9;
		content: '';
		transform: scaleX(0);
		transition: all 0.2s ease-in-out 0s;
		opacity: 0.85;
	}
</style>
